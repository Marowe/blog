<div class="col-sm-offset-4 col-sm-4 col-xs-12">
  <h2 class="text-center">Forgot you password?</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: :true, class: "form"}) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, required: true, autofocus: true, class: "form-control" %>
    </div>

    <%= f.submit "Send", class: "btn btn-primary btn-lg" %>
  <% end %>

</div>
<%= render "devise/shared/links" %>
